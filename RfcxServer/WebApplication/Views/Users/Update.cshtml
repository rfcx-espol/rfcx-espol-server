@model WebApplication.Models.User


@section Style {
    <style>

        #div_update {
            margin-top: 20px;
            margin-bottom: 50px;
            margin-left: 20px;
        }

        input {
            margin: 2px;
            padding: 4px;
        }
    </style>
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>
    <div id="div_update">
        <label>Username:</label> <input id="username" value=@ViewBag.UserToEdit.Username required /> <br />
        <label>Name:</label> <input id="name" value=@ViewBag.UserToEdit.Name required /> <br />
        <label>New Password:</label> <input id="newPassword" type="password" required /> <br />
        <label>Confirm Password:</label> <input id="confirmPassword" type="password" required /> <br />
        <label>Role:</label> <input id="role" value=@ViewBag.UserToEdit.Role required /> <br />
        <button type="button">Modify</button>
        <label id="passLabel"></label>
    </div>
</body>
</html>

<script src="~/js/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/js/bootstrap.js"></script>
<script src="~/js/bootstrap-dialog.min.js" type="text/javascript"></script>
<script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/js/select2.min.js" type="text/javascript"></script>
<script src="~/js/es.js" type="text/javascript"></script>
<script>
    $("#newPassword").keyup(function () {
        var VAL = this.value;

        var regex = new RegExp("^(?=.*?[a-z])(?=.*?[0-9]).{8,}$");

        if (!regex.test(VAL)) {
            $("#passLabel").text("La nueva contraseña debe ser de 8 caracteres y contener al menos un valor numérico.");
            $("button").prop("disabled", true);
        }
        else {
            $("#passLabel").text("");
            $("button").prop("disabled", false);
        }
    });

    $("button").click(function (e) {

        if ($("#newPassword").val() == $("#confirmPassword").val()) {
            var pageURLSplit = $(location).attr("href").split("/");
            var userId = pageURLSplit[pageURLSplit.length - 1];
            var requestUrl = '/api/users/update/' + userId;
            $.ajax({
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                url: requestUrl,
                type: 'POST',
                data: JSON.stringify({
                    Username: $("#username").val(),
                    Name: $("#name").val(),
                    Password: $("#newPassword").val(),
                    Token: null,
                    Role: $("#role").val()
                }),
                success: function (response, textStatus, jqXhr) {
                    console.log("User Successfully Patched!");
                    window.alert("Usuario modificado exitosamente");
                    window.location.replace("/users/index");
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // log the error to the console
                    console.log("The following error occured: " + textStatus, errorThrown);
                    window.alert("Falló la modificación del usuario");
                },
                complete: function () {
                    console.log("User Patch Ran");
                }
            });
        }
        else {
            window.alert("Las contraseñas no coinciden ");
        }


    });

</script>