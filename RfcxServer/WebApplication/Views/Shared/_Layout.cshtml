<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="cache-control" content="no-store" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>@ViewBag.Title</title>
        <link href="~/css/site.css" rel="stylesheet"/>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/w3.css" rel="stylesheet">     
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/bootstrap.css"/>
        <link rel="stylesheet" href="~/css/bootstrap-dialog.min.css">
        <link rel="stylesheet" href="~/css/layout.css">
        <link rel="stylesheet" href="~/css/jquery.dataTables.min.css">
        <link rel="stylesheet" href="~/css/select2.min.css"/>
        
        @RenderSection("Style", required: false)
    </head>
    <body>  
        <div class="nav-side-menu">
            <div class="brand">
                <img src="/images/logo.jpg" width="250"/>
            </div>
            <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>
            <div class="menu-list">
                <ul id="menu-content" class="menu-content collapse out">
                    <li data-toggle="collapse" data-target="#monitoreo" class="collapsed">
                        <a href="#"><i class="fa fa-dashboard fa-lg"></i> Monitoreo <span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="monitoreo">
                        <li><a href='@Url.Action("Index","Home")'>Estaciones</a></li>
                        <li><a href='@Url.Action("Index","Audios")'>Audios</a></li>
                        <li><a href='@Url.Action("Index","Image")'>Imágenes</a></li>
                        <li><a href='@Url.Action("Index","Map")'>Mapa</a></li>
                    </ul>
                    <li data-toggle="collapse" data-target="#historicos" class="collapsed">
                        <a href="#"><i class="fa fa-bar-chart"></i>Históricos<span class="arrow"></span></a>
                    </li>
                    <ul class="sub-menu collapse" id="historicos">
                        <li><a href='@Url.Action("ByHour","HistoricalData")'>Por Hora</a></li>                        
                        <li><a href='@Url.Action("Index","HistoricalData")'>Por día</a></li>                                                
                        <li><a href='@Url.Action("ByDateStation","HistoricalData")'>Entre estaciones</a></li>
                    </ul>
                    <li data-toggle="collapse" data-target="#bosque" class="collapsed">
                        <a href="#"><i class="fa fa-tree fa-lg"></i> Bosque Virtual <span class="arrow"></span></a>
                    </li>  
                    <ul class="sub-menu collapse" id="bosque">
                        <li><a href='@Url.Action("Index","Specie")'>Especies</a></li>
                        <li><a href='@Url.Action("Index","Question")'>Preguntas</a></li>
                        <li><a href='@Url.Action("Index","BosqueVirtual")' target="_blank">Juego</a></li>
                    </ul>
                    <li>
                        <a href="#"><i class="fa fa-wrench fa-lg"></i> Administración </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index","Alert")'><i class="fa fa-bell fa-lg"></i> Alertas </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index","Incidentes")'><i class="fa fa-exclamation-triangle"></i> Incidentes </a>
                    </li>
                </ul>
                <li data-toggle="collapse" data-target="#administracion" class="collapsed">
                    <a href="#"><i class="fa fa-wrench fa-lg"></i> Administración <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="administracion">
                    <li><a href='@Url.Action("Index","Users")'>Usuarios</a></li>
                </ul>
            </ul>
        </div>
    </div>

    <nav class="navbar navbar-default navbar-fixed-top">
        <ul class="nav navbar-nav navbar-right">
            <li id="login"></li>
        </ul>
    </nav>

    <div class="container body-content" style="margin-top: 67px;">
        @RenderBody()
    </div>

    <script src="~/js/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/bootstrap-dialog.min.js" type="text/javascript"></script>
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/js/select2.min.js" type="text/javascript"></script>
    <script src="~/js/es.js" type="text/javascript"></script>
    <script src="~/js/jquery.cookie.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            if (typeof $.cookie('token') === 'undefined') {
                console.log("no cookie");
                $("#login").html("<a href='/Authentication'><i class='fa fa-user fa-lg'></i> Ingresar</a>")
            } else {
                $("#login").html("<a href='/'><i class='fa fa-user fa-lg'></i> Log Out</a>")
                $("#login").click(function (e) {
                    $.removeCookie("token", { path: '/' })
                });
            }
        });
    </script>
    @RenderSection("Scripts", required: false)

    @RenderSection("ScriptsIndex", required: false)
    <div style="clear: both;"></div>
    <footer>
        <p id="pie_pagina" style="margin: 0">Bosque Protector Prosperina</p>
    </footer>
</body>
</html>

