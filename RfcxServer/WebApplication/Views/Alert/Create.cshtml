@{
    ViewBag.Title = "Crear Alerta";
}
@section Style {
    <style>
        #titulo {
            text-align: center;
        }
        #boton_alerta {
            text-align: left;
            margin-top: 20px;
            margin-bottom: 65px;
        }
        #subtitulo {
            margin-bottom: 5px;
        }
        #formulario {
            margin-left: 0;
            margin-right: 270px;
            overflow: hidden;
        }
        textarea {
            resize: none;
        }

        #mensaje {
            color: gray;
        }
        .modal-footer {
            text-align: center !important;
        }
    </style>
}

<div id="formulario" class="row">
    <form id="form_crear_alerta" method="post" enctype="multipart/form-data" action="/api/alert/">
        <div id="titulo" class="form-group col-lg-12 col-md-12">
            <h2>Creación de alerta</h2>
        </div>
        <div class="form-group col-lg-12 col-md-12">
            <label>Nombre: </label>
            <input id="nombre_alerta" class="form-control" type="text" name="nombre_alerta" required>
        </div>
        <div class="form-group col-lg-12 col-md-12">
            <label>Tipo: </label>
            <select name="tipo_alerta" class="form-control" required="">
                <option value="" hidden="">Escoja una opción</option>
                    <option value="técnico">Técnico</option>
                    <option value="Amenaza">Amenaza</option>
                    <option value="Investigación">Investigación</option>
            </select>
        </div>     
        <div class="col-lg-12 col-md-12">
            <label>Correos a Notificar: </label>
            <input id="correos_notificacion" class="form-control" type="text" name="correos_notificacion" required>
        </div>
        <div class="col-lg-12 col-md-12">
            <p id="mensaje">Ingrese cada correo separado por ;</p>
        </div>
        <div class="col-lg-12 col-md-12">
            <label>Mensaje: </label>
            <textarea id="mensaje_alerta" class="form-control" type="text" name="mensaje_alerta" rows="3" required></textarea>
        </div>
        <div id="subtitulo" class="form-group col-lg-12 col-md-12">
            <h4>Notificar cuando: </h4>
        </div>
        <div class="col-lg-2 col-md-2">
            <label>Estación: </label>
            <input id="estacion_alerta" class="form-control" type="text" name="estacion_alerta">
        </div>
        <div class="col-lg-2 col-md-2">
            <label>Sensor: </label>
            <input id="sensor_alerta" class="form-control" type="text" name="sensor_alerta">
        </div>
        <div class="col-lg-2 col-md-2">
            <label>Condición: </label>
            <select name="tipo_condicion" class="form-control">
                <option value="" hidden="">Escoja una opción</option>
                    <option value="MAYOR QUE">mayor que</option>
                    <option value="MENOR QUE">menor que</option>
                    <option value="IGUAL QUE">igual que</option>
            </select>
        </div>
        <div class="col-lg-2 col-md-2">
            <label>Valor: </label>
            <input id="threshold_alerta" class="form-control" type="text" name="threshold_alerta">
        </div>
        <div id="boton_alerta" class="form-group col-lg-12 col-md-12">
            <button class="btn btn-primary" type="submit">Crear Alerta</button>
        </div>
    </form>
</div>


