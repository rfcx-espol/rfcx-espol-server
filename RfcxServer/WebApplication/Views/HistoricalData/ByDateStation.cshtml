
@{
    ViewData["Title"] = "Bosque Protector";
    var sensorsTypeAndLocation  = (List<string>)ViewData["l"];
}
@section Style {
  <link rel="stylesheet" type="text/css" href="~/css/stationView.css">
}

<div class ="card ml-3">
  <div class="card-body">
    <h3 class="titleHistoricalView" >Históricos entre estaciones</h3>
  
    <form class="form-inline justify-content-center">
      <div class="form-group">
        <label for="selectStation">Sensor:</label>
        <select class="form-control mr-2" id="selectStation">
          @foreach(var obj in @sensorsTypeAndLocation){
            <option>
              @(obj)
            </option>
          }
        </select>
      </div>
       <div class="form-group">
        <label for="startDate">Desde:</label>
        <input type="date" class="form-control mr-2 date-picker" required="true">   
      </div>
      <div class="form-group">
        <label for="endDate">Hasta:</label>
        <input type="date" class="form-control mr-2 date-picker-end" required="true">   
      </div>
      <button type="button" class="btn btn-success" id="button-filter">Filtrar</button> 
    </form>
  </div>
</div>

