@model IEnumerable<WebApplication.Models.Station>
@{
    ViewData["Title"] = "Bosque Protector";
}
@section Style {
  <link rel="stylesheet" type="text/css" href="~/css/stationView.css">
}


<div style = "background-color:white; position:fixed;z-index:20000; width:75%; border-bottom: 1px solid #ccc; padding-bottom:10px;">
<h3 id="stationName" style="text-align: center; color: #e4b836; font-weight: bold; z-index: 1;">Históricos por día</h3>
 <div class="" style="margin-top:0px; margin-bottom:10px; margin-left:5%;z-index:1;">
      <div class ="col-md-1 filter-widget-label" style="margin-right:20px;">
        <label for="">Estación:</label>
      </div>
      <div class ="col-md-3" style="padding-right:0px;">
        <select class="form-control input-sm" >
           @foreach (Station station in @Model) {
            <option value="@(station.Id)">
              @(station.Name)
            </option>
          }
        </select>
      </div>      
      <div class ="col-md-1 filter-widget-label">
        <label for="">Desde:</label>        
      </div>      
      <div class ="col-md-2" style="padding-right:0px; width:130px;" >
        <input type="date" class="form-control input-sm date-picker" required="true" style="">
      </div>

      <div class ="col-md-1 filter-widget-label">
        <label for="">Por:</label>
      </div>

      <div class ="col-md-2" style="padding-right:0px;">
        <select class="form-control input-sm range-picker">
          <option>Semana</option>
          <option>Mes</option>
          <option>Año</option>
        </select>
      </div>      
      <div class ="col-md-1">
        <button type="button" class="button-filter">Filtrar</button>                      
      </div>  
  </div>
</div>

<div id="individual" class="tabcontent" style="margin-top:15%;>
  <p id="stationId" style="display:none"></p>

  <!--div class="col-sm-12 col-md-12 col-lg-12 historical">        
    <div id="chartAvgPerDate" style="height: 320px" class="canvasJsChart"></div>
  </div-->  
</div>
@section ScriptsIndex {  
  <script src="~/js/moment.js" type="text/javascript"></script> 
  <script src="~/js/charts/canvasjs-2.1.2/canvasjs.min.js" type="text/javascript"></script>  
  <script src="~/js/charts/simple-statistics/simple-statistics.min.js" type="text/javascript"></script>
  <script src="~/js/charts/byDate.js" type="text/javascript"></script>
}